{
    "name": "phnixdev/theatre",
    "description": "The \"Symfony Theatre\"",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Otter",
            "email": "phnixdev@gmail.com",
            "role": "Developer"
        }
    ],
    "type": "project",
    "autoload": {
        "psr-4": { "App\\": "app/", "Theatre\\": "src/Theatre" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" },
        "files": [ "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php" ]
    },
    "require": {
        "php": ">=7.0",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "danielstjules/stringy": "^3.0",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/orm": "^2.5",
        "incenteev/composer-parameter-handler": "^2.1",
        "maba/webpack-bundle": "^0.6",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0",
        "sonata-project/admin-bundle": "^3.0",
        "sonata-project/doctrine-orm-admin-bundle": "^3.0",
        "symfony/monolog-bundle": "^3.1",
        "symfony/polyfill-apcu": "^1.3",
        "symfony/swiftmailer-bundle": "^3.0",
        "symfony/symfony": "^3.0",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "behat/behat": "^3.3",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.3",
        "behat/mink-zombie-driver": "^1.4",
        "behat/mink-extension": "^2.2",
        "behat/symfony2-extension": "^2.1",
        "friendsofphp/php-cs-fixer": "^2.3",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "~5.0",
        "satooshi/php-coveralls": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/phpunit-bridge": "^3.0"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
